- model_class = Ticket
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:department)
      %th= model_class.human_attribute_name(:customer_name)
      %th= model_class.human_attribute_name(:customer_email)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - tickets.each do |ticket|
      %tr
        %td= link_to ticket.title, ticket_path(ticket)
        %td= ticket.status.humanize
        %td= ticket.description
        %td= ticket.department
        %td= ticket.customer_name
        %td= ticket.customer_email
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_ticket_path(ticket), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), ticket_path(ticket), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'