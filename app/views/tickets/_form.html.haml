= simple_form_for @ticket, :html => { :class => 'form-horizontal', :id =>'ticket' } do |f|
  = f.input :title, :input_html => {:style => 'width: 200px'}
  = f.input :status, as: :hidden
  = f.input :description, as: :text
  = f.input :department, include_blank: false
  = f.input :customer_name, :input_html => {:style => 'width: 200px'}
  = f.input :customer_email, :class => 'form-control', :input_html => {:style => 'width: 200px'}
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), tickets_path, :class => 'btn btn-default'  
